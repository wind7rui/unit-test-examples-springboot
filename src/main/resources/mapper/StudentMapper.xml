<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.StudentMapper">
    <insert id="save" parameterType="com.example.model.Student" useGeneratedKeys="true" keyProperty="id">
        insert into student (number,name,age,sex,grade,clazz) values (#{number},#{name},#{age},#{sex},#{grade},#{clazz})
    </insert>

    <select id="selectByNumber" resultType="com.example.model.Student">
        select * from student where number = #{number}
    </select>

    <update id="update" parameterType="com.example.model.Student">
        update student set number = #{number},name=#{name},age=#{age},sex=#{sex},grade=#{grade},clazz=#{clazz} where id = #{id}
    </update>

    <delete id="delete">
        delete from student where id = #{id}
    </delete>
</mapper>